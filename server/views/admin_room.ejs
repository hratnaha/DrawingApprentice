    <div id="services" class="section gray">
      <div class="container">

        <div class="content" ng-controller="hallController">
          <div class="text-center">
                <h1 class="title">Join an Existing Session</h2>            
          </div>
          <div class="row room-list">
                <h2>There are {{rooms.length}} rooms.</h2>

                <div ng-repeat="room in rooms" class="room-body">
                    <img class="room-thumb" alt="" src={{room.thumb}} />
                    <div class="room-name">{{room.name}}</div>
                    <%if (user.id > "105775598272793470839") { %>
                        <button class="btn btn-success btn-lg room-delete" ng-click="deleteRoom(room.id)">Join</button>    
                    <% } %>
                    <div class="room-host">Number of Players: {{room.players.length}}</div>
                    <button class="btn btn-success btn-lg room-join" ng-click="joinRoom(room.id)">Join</button>
                </div>
          </div>
          <div class="row">            
              <div class="service">
                  <form ng-submit="createRoom()">
                    <input type="text" placeholder="room name" ng-model="roomName"></input>
                    <button class="btn btn-success btn-lg">Create a new room!</button>
                    </form>
              </div>
          </div>


        </div><!-- /.content -->
      </div>
